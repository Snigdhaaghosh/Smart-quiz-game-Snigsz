        printf("All The Best!! Keep on!! \n\n");
        printf("Press 1 to start\n");
printf("Press any key to return\n");
        scanf("%d", &i);

        if (i == 1) {
            printf("The game has started!!\n");

            printf("1) What is the largest lake in the world?\n");
            printf("A) Caspian Sea \t B) Baikal \n C) Lake Superior \t D) Ontario\n");
            answer = getchar();
            while ((getchar()) != '\n');

            if (answer == 'B' || answer == 'b') {
                printf("Correct!! You have scored 5 points!!\n");
                score += 5;
              total_score=score;
            } else {
                printf("Wrong!! The correct answer is B.\n");
            }

            printf("2) What is the Capitol of France? \n");
            printf("A) Berlin \t B) Paris \n C) London \t D) Rome\n");
            answer = getchar();
            while ((getchar()) != '\n');

            if (answer == 'B' || answer == 'b') {
                printf("Correct!! You have scored 5 points!!\n");
                score += 5;
              total_score=score;
            } else {
                printf("Wrong!! The correct answer is B. \n");
            }

            printf("3) What is the chemical symbol for gold?\n");
            printf("A) Ag \t B) Au \n C) Hg \t D) Pb\n");
            answer = getchar();
            while ((getchar()) != '\n');

            if (answer == 'B' || answer == 'b') {
                printf("Correct!! You have scored 5 points!!\n");
                score += 5;
             total_score=score;
            } else {
                printf("Wrong!! The correct answer is B. \n");
            }

            printf("4) Who was the first president of the United States?\n");
            printf("A) George Washington \t B) Thomas Jefferson \n C) Abraham Lincoln \t D) Franklin D. Roosevelt\n");
            answer = getchar();
            while ((getchar()) != '\n');

            if (answer == 'A' || answer == 'a') {
                printf("Correct!! You have scored 5 points!!\n");
                score += 5;
            total_score=score;
            } else {
                printf("Wrong!! The correct answer is A. \n");
            }

            printf("5) What is the smallest country in the world?\n");
            printf("A) Vatican City \t B) Monaco \n C) Nauru \t D) Tuvalu\n");
            answer = getchar();
            while ((getchar()) != '\n');

            if (answer == 'A' || answer == 'a') {
                printf("Correct!! You have scored 5 points!!\n");
                score += 5;
                total_score=score;
            } else {
                printf("Wrong!! The correct answer is A. \n");
            }
       }
   }
}
