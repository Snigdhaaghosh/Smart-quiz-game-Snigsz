
#include<stdio.h>

int main() {
    int i;
    char answer;
    char choice;
    float score = 0.0,total_score=0.0;
    char name[20];

    printf("Welcome to Smart Quiz by Snigsz\n");
    printf("....... Please Enter your name.........:\n ");
    fgets(name, 20, stdin);

    printf("Press S to start the game\n");
    printf("Press V to view your score\n");
    printf("Press R to restart the game\n");
    printf("Press Q to exit the game\n");
    choice = getchar();

    while ((getchar()) != '\n');

    if (choice == 'S') {
        printf("Game starts in a few seconds!!\n");
        printf("Here are some rules and regulations you should know before playing:\n");
        printf("In this game you will be asked total 5 questions. For each question you will score 5 !!\n");
